<html xmlns="http://www.w3.org/1999/xhtml" lang="fr">
<head profile="http://gmpg.org/xfn/11">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= h(page_title) %></title>
  <%= render 'shared/page_header' %>
  <%= stylesheet_link_tag "/stylesheets/theme/style.css", :media => 'all' %>
  <style type="text/css">
      #logo { background: url(<%= File.join(this_blog.base_url, "images", "theme", "bg#{Random.rand(2) + 1}.jpg") %>) top left no-repeat; }
  </style>
</head>
<body>
  <div class='container'>
    <header class="masthead">
    <%- if controller.controller_name == 'articles' and controller.action_name.include? 'index' %>
      <h1><%= link_to(this_blog.blog_name, this_blog.base_url) %></h1>
    <%- else %>
        <p id='title'><%= link_to(this_blog.blog_name, this_blog.base_url) %></p>
    <%- end %>
      <p class='subtitle'><%= this_blog.blog_subtitle %></p>
    </header>

    <%= yield %>

    <footer class="colophon">
      <p style='text-align: center' class="credits"><small>Powered by <a href='http://publify.co'>Publify</a> â€“ Theme <a href='http://blog.i-wars.net'>Sebastian Engel</a></small></p>
    </footer>
  </div>

  <script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'illuminationderwirklichkeitpublify'; // required: replace example with your forum shortname

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
        s.src = '//' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
    }());
  </script>

</body>
</html>
